<h1>Buses</h1>

<div id="buses">
  <% @buses.each do |bus| %>
    <%= render bus %>
    <p>
      <%= link_to "Show this bus", bus %>
    </p>
  <% end %>
</div>
<% if current_user.present? %>
    <% if current_user.user_type == "busowner" %>
      <%= link_to "New bus", new_bus_path ,class:"btn btn-success"%>
    <% end %>
<% end %> 
